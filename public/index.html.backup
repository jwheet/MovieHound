    <script>
        let currentFilename = null;
        let eventSource = null;

        // Update number input when slider changes
        document.getElementById('movieCount').addEventListener('input', function() {
            document.getElementById('sliderValue').value = this.value;
        });

        // Update slider when number input changes
        document.getElementById('sliderValue').addEventListener('input', function() {
            let value = parseInt(this.value);
            if (isNaN(value) || value < 1) {
                value = 1;
            } else if (value > 10000) {
                value = 10000;
            }
            this.value = value;
            document.getElementById('movieCount').value = value;
        });

        function updateToggleState() {
            const checkbox = document.getElementById('includeInTheaters');
            const stateText = document.getElementById('toggleState');
            stateText.textContent = checkbox.checked ? 'ON' : 'OFF';
        }

        function findMovies() {
            const language = document.getElementById('language').value;
            const targetCount = parseInt(document.getElementById('movieCount').value);
            const includeInTheaters = document.getElementById('includeInTheaters').checked;
            const findBtn = document.getElementById('findBtn');
            const counterDisplay = document.getElementById('counterDisplay');
            const counterNumber = document.getElementById('counterNumber');
            const targetNumber = document.getElementById('targetNumber');
            const downloadSection = document.getElementById('downloadSection');

            // Reset UI
            findBtn.disabled = true;
            counterDisplay.classList.add('active');
            downloadSection.classList.remove('active');
            counterNumber.textContent = '0';
            targetNumber.textContent = targetCount;
            currentFilename = null;

            // Close existing connection if any
            if (eventSource) {
                eventSource.close();
            }

            // Create SSE connection
            eventSource = new EventSource(`/api/find-movies?dummy=${Date.now()}`);

            // Send request via fetch POST
            fetch('/api/find-movies', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ language, targetCount, includeInTheaters })
            }).then(response => {
                const reader = response.body.getReader();
                const decoder = new TextDecoder();

                function read() {
                    reader.read().then(({ done, value }) => {
                        if (done) {
                            findBtn.disabled = false;
                            return;
                        }

                        const text = decoder.decode(value);
                        const lines = text.split('\n');

                        for (const line of lines) {
                            if (line.startsWith('data: ')) {
                                const data = JSON.parse(line.substring(6));

                                if (data.error) {
                                    alert('Error: ' + data.error);
                                    findBtn.disabled = false;
                                    return;
                                }

                                if (data.complete) {
                                    counterNumber.textContent = data.count;
                                    currentFilename = data.filename;
                                    downloadSection.classList.add('active');
                                    findBtn.disabled = false;
                                } else {
                                    counterNumber.textContent = data.count;
                                }
                            }
                        }

                        read();
                    });
                }

                read();
            }).catch(error => {
                console.error('Error:', error);
                alert('Error: ' + error.message);
                findBtn.disabled = false;
            });
        }

        function downloadList() {
            if (currentFilename) {
                window.location.href = `/api/download/${currentFilename}`;
            }
        }

        function openHistory() {
            const modal = document.getElementById('historyModal');
            const historyContent = document.getElementById('historyContent');
            modal.classList.add('active');

            historyContent.innerHTML = '<div class="loading-spinner"></div>';

            fetch('/api/history')
                .then(response => response.json())
                .then(history => {
                    if (history.length === 0) {
                        historyContent.innerHTML = '<div class="no-history">No download history yet</div>';
                    } else {
                        historyContent.innerHTML = history.reverse().map(item => `
                            <div class="history-item" id="history-${item.filename}">
                                <div class="history-item-header">
                                    <div class="history-date">${item.date}</div>
                                    <div class="history-count">${item.count} movies</div>
                                </div>
                                <div>Language: ${item.language}</div>
                                <div class="history-actions">
                                    <button class="history-download" onclick="downloadHistoryItem('${item.filename}')">
                                        Download
                                    </button>
                                    <button class="history-delete" onclick="deleteHistoryItem('${item.filename}')">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        `).join('');
                    }
                })
                .catch(error => {
                    historyContent.innerHTML = '<div class="no-history">Error loading history</div>';
                    console.error('Error:', error);
                });
        }

        function closeHistory() {
            document.getElementById('historyModal').classList.remove('active');
        }

        function downloadHistoryItem(filename) {
            window.location.href = `/api/download/${filename}`;
        }

        function deleteHistoryItem(filename) {
            if (!confirm('Are you sure you want to delete this list? This will also remove all movie IDs from the global deduplication system.')) {
                return;
            }

            fetch(`/api/delete/${filename}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the item from the UI
                    const element = document.getElementById(`history-${filename}`);
                    if (element) {
                        element.remove();
                    }

                    // Check if there are any history items left
                    const historyContent = document.getElementById('historyContent');
                    if (historyContent.querySelectorAll('.history-item').length === 0) {
                        historyContent.innerHTML = '<div class="no-history">No download history yet</div>';
                    }
                } else {
                    alert('Error deleting list: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                alert('Error deleting list: ' + error.message);
                console.error('Error:', error);
            });
        }

        // Close modal when clicking outside
        document.getElementById('historyModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeHistory();
            }
        });

        // Torrent conversion variables
        let selectedLists = [];
        let selectedQuality = '1080p';
        let currentTorrentFilename = null;
        let currentErrorFilename = null;
        let availableLists = [];

        // Load movie lists on page load
        async function loadMovieLists() {
            try {
                const response = await fetch('/api/movie-lists');
                availableLists = await response.json();
            } catch (error) {
                console.error('Error loading movie lists:', error);
            }
        }

        // Toggle dropdown visibility
        function toggleDropdown() {
            const dropdown = document.getElementById('multiSelectOptions');
            dropdown.classList.toggle('active');

            if (dropdown.classList.contains('active')) {
                renderDropdownOptions();
            }
        }

        // Render dropdown options
        function renderDropdownOptions() {
            const optionsDiv = document.getElementById('multiSelectOptions');
            optionsDiv.innerHTML = availableLists.map(list => `
                <div class="multi-select-option" onclick="toggleListSelection('${list.filename}', event)">
                    <input type="checkbox" ${selectedLists.includes(list.filename) ? 'checked' : ''} onclick="event.stopPropagation()">
                    <span>${list.displayName} (${list.count} movies)</span>
                </div>
            `).join('');
        }

        // Toggle list selection
        function toggleListSelection(filename, event) {
            event.stopPropagation();

            const index = selectedLists.indexOf(filename);
            if (index === -1) {
                selectedLists.push(filename);
            } else {
                selectedLists.splice(index, 1);
            }

            updateSelectedDisplay();
            renderDropdownOptions();
        }

        // Update selected lists display
        function updateSelectedDisplay() {
            const display = document.getElementById('multiSelectDisplay');

            if (selectedLists.length === 0) {
                display.innerHTML = '<span style="color: #999;">Select lists...</span>';
            } else {
                display.innerHTML = selectedLists.map(filename => {
                    const list = availableLists.find(l => l.filename === filename);
                    const displayName = list ? list.displayName : filename;
                    return `
                        <div class="selected-tag">
                            ${displayName}
                            <span class="remove" onclick="removeList('${filename}', event)">&times;</span>
                        </div>
                    `;
                }).join('');
            }
        }

        // Remove list from selection
        function removeList(filename, event) {
            event.stopPropagation();
            const index = selectedLists.indexOf(filename);
            if (index !== -1) {
                selectedLists.splice(index, 1);
                updateSelectedDisplay();
            }
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('movieListsDropdown');
            if (dropdown && !dropdown.contains(event.target)) {
                document.getElementById('multiSelectOptions').classList.remove('active');
            }
        });

        // Select quality
        function selectQuality(quality) {
            selectedQuality = quality;
            document.querySelectorAll('.quality-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Convert to torrents
        function convertToTorrents() {
            if (selectedLists.length === 0) {
                alert('Please select at least one movie list');
                return;
            }

            const convertBtn = document.getElementById('convertBtn');
            const counterDisplay = document.getElementById('torrentCounterDisplay');
            const counterNumber = document.getElementById('torrentCounterNumber');
            const targetNumber = document.getElementById('torrentTargetNumber');
            const statusMessage = document.getElementById('torrentStatusMessage');
            const downloadSection = document.getElementById('torrentDownloadSection');
            const errorSection = document.getElementById('errorListSection');

            // Reset UI
            convertBtn.disabled = true;
            counterDisplay.classList.add('active');
            downloadSection.classList.remove('active');
            errorSection.classList.remove('active');
            counterNumber.textContent = '0';
            targetNumber.textContent = '0';
            statusMessage.textContent = 'Initializing...';
            currentTorrentFilename = null;
            currentErrorFilename = null;

            // Send conversion request
            fetch('/api/convert-to-torrents', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    filenames: selectedLists,
                    quality: selectedQuality
                })
            }).then(response => {
                const reader = response.body.getReader();
                const decoder = new TextDecoder();

                function read() {
                    reader.read().then(({ done, value }) => {
                        if (done) {
                            convertBtn.disabled = false;
                            return;
                        }

                        const text = decoder.decode(value);
                        const lines = text.split('\n');

                        for (const line of lines) {
                            if (line.startsWith('data: ')) {
                                const data = JSON.parse(line.substring(6));

                                if (data.error) {
                                    alert('Error: ' + data.error);
                                    convertBtn.disabled = false;
                                    counterDisplay.classList.remove('active');
                                    return;
                                }

                                if (data.complete) {
                                    counterNumber.textContent = data.totalCount;
                                    targetNumber.textContent = data.totalCount;
                                    statusMessage.textContent = `Complete! ${data.successCount} successful, ${data.errorCount} failed | Total Size: ${data.totalSize}`;
                                    currentTorrentFilename = data.resultsFilename;
                                    currentErrorFilename = data.errorsFilename;
                                    downloadSection.classList.add('active');

                                    if (data.errorCount > 0 && data.errorsFilename) {
                                        loadErrorList(data.errorsFilename);
                                    }

                                    convertBtn.disabled = false;
                                } else {
                                    counterNumber.textContent = data.processed;
                                    targetNumber.textContent = data.total;
                                    const sizeText = data.totalSize ? ` | ${data.totalSize}` : '';
                                    statusMessage.textContent = `Processing: ${data.current}${sizeText}`;
                                }
                            }
                        }

                        read();
                    });
                }

                read();
            }).catch(error => {
                console.error('Error:', error);
                alert('Error: ' + error.message);
                convertBtn.disabled = false;
                counterDisplay.classList.remove('active');
            });
        }

        // Download torrent list
        function downloadTorrentList() {
            if (currentTorrentFilename) {
                window.location.href = `/api/download-torrent/${currentTorrentFilename}`;
            }
        }

        // Download error list
        function downloadErrorList() {
            if (currentErrorFilename) {
                window.location.href = `/api/download-torrent/${currentErrorFilename}`;
            }
        }

        // Load error list
        async function loadErrorList(filename) {
            try {
                const response = await fetch(`/api/download-torrent/${filename}`);
                const text = await response.text();
                const lines = text.split('\n').slice(1); // Skip header

                const errorSection = document.getElementById('errorListSection');
                const errorContent = document.getElementById('errorListContent');

                errorContent.innerHTML = lines.filter(l => l.trim()).map(line => {
                    const parts = line.split('\t');
                    return `
                        <div class="error-item">
                            <div class="error-item-info">
                                <strong>${parts[1]}</strong> (${parts[4]})<br>
                                <small>TMDB: ${parts[3]} | IMDB: ${parts[2]} | ${parts[5]}</small>
                            </div>
                            <button class="manual-add-btn" onclick="openManualMagnet('${parts[1]}', '${parts[3]}', '${parts[2]}')">
                                Add Magnet
                            </button>
                        </div>
                    `;
                }).join('');

                errorSection.classList.add('active');
            } catch (error) {
                console.error('Error loading error list:', error);
            }
        }

        // Open manual magnet modal
        function openManualMagnet(title, tmdbId, imdbId) {
            document.getElementById('manualMovieTitle').textContent = title;
            document.getElementById('manualTmdbId').textContent = tmdbId;
            document.getElementById('manualImdbId').textContent = imdbId;
            document.getElementById('manualMagnetInput').value = '';
            document.getElementById('manualMagnetModal').classList.add('active');
        }

        // Close manual magnet modal
        function closeManualMagnet() {
            document.getElementById('manualMagnetModal').classList.remove('active');
        }

        // Submit manual magnet
        async function submitManualMagnet() {
            const magnetLink = document.getElementById('manualMagnetInput').value.trim();
            const tmdbId = document.getElementById('manualTmdbId').textContent;

            if (!magnetLink.startsWith('magnet:')) {
                alert('Invalid magnet link');
                return;
            }

            try {
                await fetch('/api/add-manual-magnet', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        errorsFilename: currentErrorFilename,
                        tmdbId: tmdbId,
                        magnetLink: magnetLink
                    })
                });

                alert('Magnet link added successfully!');
                closeManualMagnet();
                if (currentErrorFilename) {
                    loadErrorList(currentErrorFilename);
                }
            } catch (error) {
                console.error('Error adding manual magnet:', error);
                alert('Failed to add magnet link');
            }
        }

        // Open torrent history
        function openTorrentHistory() {
            const modal = document.getElementById('torrentHistoryModal');
            const historyContent = document.getElementById('torrentHistoryContent');
            modal.classList.add('active');

            historyContent.innerHTML = '<div class="loading-spinner"></div>';

            fetch('/api/torrent-history')
                .then(response => response.json())
                .then(history => {
                    if (history.length === 0) {
                        historyContent.innerHTML = '<div class="no-history">No conversion history yet</div>';
                    } else {
                        historyContent.innerHTML = history.reverse().map(item => `
                            <div class="history-item" id="torrent-history-${item.resultsFilename}">
                                <div class="history-item-header">
                                    <div class="history-date">${item.date}</div>
                                    <div class="history-count">${item.successCount}/${item.totalCount} successful</div>
                                </div>
                                <div>Quality: ${item.quality} | Errors: ${item.errorCount} | Size: ${item.totalSize || 'Unknown'}</div>
                                <div style="font-size: 12px; color: #666;">Sources: ${item.sourceFiles.join(', ')}</div>
                                <div class="history-actions">
                                    <button class="history-download" onclick="window.location.href='/api/download-torrent/${item.resultsFilename}'">
                                        Download Results
                                    </button>
                                    ${item.errorsFilename ? `
                                        <button class="history-download" onclick="window.location.href='/api/download-torrent/${item.errorsFilename}'">
                                            Download Errors
                                        </button>
                                        <button class="history-download" style="background: #764ba2;" onclick="viewTorrentErrors('${item.errorsFilename}')">
                                            View Errors
                                        </button>
                                        <button class="history-download" style="background: #f39c12;" onclick="refreshMissing('${item.errorsFilename}', '${item.resultsFilename}', '${item.quality}')">
                                            Refresh Missing
                                        </button>
                                    ` : ''}
                                    <button class="history-delete" onclick="deleteTorrentHistory('${item.resultsFilename}')">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        `).join('');
                    }
                })
                .catch(error => {
                    console.error('Error loading torrent history:', error);
                    historyContent.innerHTML = '<div class="no-history">Error loading history</div>';
                });
        }

        // View torrent errors
        function viewTorrentErrors(errorsFilename) {
            // Close the history modal first
            closeTorrentHistory();

            // Load and display the errors
            currentErrorFilename = errorsFilename;
            loadErrorList(errorsFilename);
        }

        // Delete torrent history entry
        function deleteTorrentHistory(resultsFilename) {
            if (!confirm('Are you sure you want to delete this torrent conversion? This will remove both the results and error files.')) {
                return;
            }

            fetch(`/api/delete-torrent/${resultsFilename}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the item from the UI
                    const element = document.getElementById(`torrent-history-${resultsFilename}`);
                    if (element) {
                        element.remove();
                    }

                    // Check if there are any history items left
                    const historyContent = document.getElementById('torrentHistoryContent');
                    if (historyContent.querySelectorAll('.history-item').length === 0) {
                        historyContent.innerHTML = '<div class="no-history">No conversion history yet</div>';
                    }
                } else {
                    alert('Error deleting conversion: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                alert('Error deleting conversion: ' + error.message);
                console.error('Error:', error);
            });
        }

        // Close torrent history
        function closeTorrentHistory() {
            document.getElementById('torrentHistoryModal').classList.remove('active');
        }

        // Refresh missing movies
        async function refreshMissing(errorsFilename, resultsFilename, quality) {
            if (!confirm(`Re-scan all missing movies with the three-tier fallback system?\n\nThis will:\n1. Try YTS API\n2. Try YTS page scraping with IMDB info\n3. Try Torrent-Api-py (torrentproject, kickass, piratebay, glodls, bitsearch, torlock)\n\nThis may take several minutes.`)) {
                return;
            }

            // Show progress bar
            const progressDiv = document.getElementById('refreshProgress');
            const progressBar = document.getElementById('refreshProgressBar');
            const progressText = document.getElementById('refreshProgressText');
            const progressCount = document.getElementById('refreshProgressCount');
            const newlyFoundSpan = document.getElementById('refreshNewlyFound');
            const stillMissingSpan = document.getElementById('refreshStillMissing');

            progressDiv.style.display = 'block';
            progressBar.style.width = '0%';
            progressText.textContent = 'Starting refresh...';
            progressCount.textContent = '0 / 0';
            newlyFoundSpan.textContent = 'Found: 0';
            stillMissingSpan.textContent = 'Missing: 0';

            try {
                const response = await fetch('/api/refresh-missing', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ errorsFilename, resultsFilename, quality })
                });

                const reader = response.body.getReader();
                const decoder = new TextDecoder();
                let buffer = '';

                while (true) {
                    const { done, value } = await reader.read();
                    if (done) break;

                    buffer += decoder.decode(value, { stream: true });
                    const lines = buffer.split('\n');
                    buffer = lines.pop(); // Keep incomplete line in buffer

                    for (const line of lines) {
                        if (line.startsWith('data: ')) {
                            const data = JSON.parse(line.substring(6));

                            if (data.error) {
                                alert('Error: ' + data.error);
                                progressDiv.style.display = 'none';
                                return;
                            }

                            if (data.complete) {
                                progressBar.style.width = '100%';
                                progressText.textContent = 'Complete!';
                                alert(`Refresh complete!\n\nNewly found: ${data.newlyFound}\nStill missing: ${data.stillMissing}\nAdditional size: ${data.additionalSize}\nNew total size: ${data.newTotalSize}`);
                                setTimeout(() => {
                                    progressDiv.style.display = 'none';
                                    openTorrentHistory();
                                    if (currentErrorFilename === errorsFilename) {
                                        loadErrorList(errorsFilename);
                                    }
                                }, 1000);
                                return;
                            } else {
                                const percent = (data.processed / data.total) * 100;
                                progressBar.style.width = percent + '%';
                                progressCount.textContent = `${data.processed} / ${data.total}`;
                                progressText.textContent = `Checking: ${data.current}`;
                                newlyFoundSpan.textContent = `Found: ${data.newlyFound}`;
                                stillMissingSpan.textContent = `Missing: ${data.stillMissing}`;
                            }
                        }
                    }
                }
            } catch (error) {
                alert('Error: ' + error.message);
                progressDiv.style.display = 'none';
            }
        }

        // Load movie lists when page loads
        window.addEventListener('load', function() {
            loadMovieLists();
            loadClientTypes();
        });

        // Download client management
        let clientTypes = {};
        let configuredClients = [];
        let currentClientType = null;
        let selectedClient = null;

        // Load available client types
        async function loadClientTypes() {
            try {
                const response = await fetch('/api/client-types');
                clientTypes = await response.json();
            } catch (error) {
                console.error('Error loading client types:', error);
            }
        }

        // Load configured clients
        async function loadConfiguredClients() {
            try {
                const response = await fetch('/api/download-clients');
                configuredClients = await response.json();
                renderConfiguredClients();
            } catch (error) {
                console.error('Error loading configured clients:', error);
            }
        }

        // Render configured clients list
        function renderConfiguredClients() {
            const container = document.getElementById('configuredClientsList');

            if (configuredClients.length === 0) {
                container.innerHTML = '<div class="no-history">No download clients configured yet</div>';
            } else {
                container.innerHTML = configuredClients.map(client => {
                    const clientConfig = clientTypes[client.type];
                    return `
                        <div class="client-button" onclick="openSendToClient('${client.id}', '${client.name}')">
                            <img src="${clientConfig.logo}" alt="${clientConfig.name}">
                            <span>${client.name}</span>
                        </div>
                    `;
                }).join('');
            }
        }

        // Open download manager modal
        async function openDownloadManager() {
            await loadConfiguredClients();
            document.getElementById('downloadManagerModal').classList.add('active');
        }

        // Close download manager modal
        function closeDownloadManager() {
            document.getElementById('downloadManagerModal').classList.remove('active');
        }

        // Open client selection modal
        function openClientSelection() {
            const grid = document.getElementById('clientGrid');

            grid.innerHTML = Object.keys(clientTypes).map(type => {
                const client = clientTypes[type];
                return `
                    <div class="client-card" onclick="selectClientType('${type}')">
                        <img src="${client.logo}" alt="${client.name}">
                        <span>${client.name}</span>
                    </div>
                `;
            }).join('');

            document.getElementById('clientSelectionModal').classList.add('active');
        }

        // Close client selection modal
        function closeClientSelection() {
            document.getElementById('clientSelectionModal').classList.remove('active');
        }

        // Select client type and open configuration
        function selectClientType(type) {
            currentClientType = type;
            const config = clientTypes[type];

            // Update modal title
            document.getElementById('clientTypeName').textContent = config.name;

            // Set default port
            document.getElementById('clientPort').value = config.defaultPort;

            // Reset form
            document.getElementById('clientName').value = '';
            document.getElementById('clientHost').value = '';
            document.getElementById('clientUsername').value = '';
            document.getElementById('clientPassword').value = '';
            document.getElementById('clientSsl').checked = false;
            document.getElementById('saveClientBtn').disabled = true;
            document.getElementById('testResult').innerHTML = '';

            // Close selection, open config
            closeClientSelection();
            document.getElementById('clientConfigModal').classList.add('active');
        }

        // Close client config modal
        function closeClientConfig() {
            document.getElementById('clientConfigModal').classList.remove('active');
        }

        // Test client connection
        async function testClientConnection() {
            const type = currentClientType;
            const name = document.getElementById('clientName').value.trim();
            const host = document.getElementById('clientHost').value.trim();
            const port = parseInt(document.getElementById('clientPort').value);
            const username = document.getElementById('clientUsername').value.trim();
            const password = document.getElementById('clientPassword').value;
            const ssl = document.getElementById('clientSsl').checked;

            if (!name || !host || !port || !username || !password) {
                alert('Please fill in all fields');
                return;
            }

            const testResult = document.getElementById('testResult');
            testResult.innerHTML = '<div class="loading-spinner"></div>';

            try {
                const response = await fetch('/api/test-download-client', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        type,
                        host,
                        port,
                        username,
                        password,
                        ssl
                    })
                });

                const result = await response.json();

                if (result.success) {
                    testResult.innerHTML = `<div class="test-result success"> Connection successful! ${result.client} ${result.version || ''}</div>`;
                    document.getElementById('saveClientBtn').disabled = false;
                } else {
                    testResult.innerHTML = `<div class="test-result error"> Connection failed: ${result.error}</div>`;
                    document.getElementById('saveClientBtn').disabled = true;
                }
            } catch (error) {
                testResult.innerHTML = `<div class="test-result error"> Connection failed: ${error.message}</div>`;
                document.getElementById('saveClientBtn').disabled = true;
            }
        }

        // Save client configuration
        async function saveClient() {
            const type = currentClientType;
            const name = document.getElementById('clientName').value.trim();
            const host = document.getElementById('clientHost').value.trim();
            const port = parseInt(document.getElementById('clientPort').value);
            const username = document.getElementById('clientUsername').value.trim();
            const password = document.getElementById('clientPassword').value;
            const ssl = document.getElementById('clientSsl').checked;

            try {
                const response = await fetch('/api/download-clients', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        type,
                        name,
                        host,
                        port,
                        username,
                        password,
                        ssl
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Client saved successfully!');
                    closeClientConfig();
                    await loadConfiguredClients();
                } else {
                    alert('Failed to save client: ' + result.error);
                }
            } catch (error) {
                alert('Failed to save client: ' + error.message);
            }
        }

        // Open send to client modal
        async function openSendToClient(clientId, clientName) {
            selectedClient = clientId;
            document.getElementById('selectedClientName').textContent = clientName;

            // Load torrent history to populate list selector
            try {
                const response = await fetch('/api/torrent-history');
                const history = await response.json();

                const select = document.getElementById('torrentListSelect');
                select.innerHTML = '<option value="">Choose a torrent list...</option>' +
                    history.map(item => `
                        <option value="${item.resultsFilename}">${item.date} - ${item.successCount}/${item.totalCount} torrents</option>
                    `).join('');
            } catch (error) {
                console.error('Error loading torrent lists:', error);
            }

            // Reset form
            document.getElementById('categoryInput').value = '';
            document.getElementById('sendProgress').classList.remove('active');

            closeDownloadManager();
            document.getElementById('sendToClientModal').classList.add('active');
        }

        // Close send to client modal
        function closeSendToClient() {
            document.getElementById('sendToClientModal').classList.remove('active');
        }

        // Send torrents to client
        async function sendTorrentsToClient() {
            const torrentFilename = document.getElementById('torrentListSelect').value;
            const category = document.getElementById('categoryInput').value.trim();

            if (!torrentFilename) {
                alert('Please select a torrent list');
                return;
            }

            const progressDiv = document.getElementById('sendProgress');
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');

            progressDiv.classList.add('active');
            progressFill.style.width = '0%';
            progressFill.textContent = '0%';
            progressText.textContent = 'Sending torrents...';

            try {
                const response = await fetch('/api/send-to-client', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        clientId: selectedClient,
                        torrentFilename,
                        category
                    })
                });

                const result = await response.json();

                if (result.success) {
                    progressFill.style.width = '100%';
                    progressFill.textContent = '100%';
                    progressText.innerHTML = `<strong>Complete!</strong> ${result.added} torrents added successfully, ${result.failed} failed`;

                    if (result.errors && result.errors.length > 0) {
                        progressText.innerHTML += `<br><small>Errors: ${result.errors.map(e => e.title).join(', ')}</small>`;
                    }
                } else {
                    progressText.innerHTML = `<strong style="color: #ef4444;">Error:</strong> ${result.error}`;
                }
            } catch (error) {
                progressText.innerHTML = `<strong style="color: #ef4444;">Error:</strong> ${error.message}`;
            }
        }

        // Close modals on outside click
        document.getElementById('downloadManagerModal').addEventListener('click', function(e) {
            if (e.target === this) closeDownloadManager();
        });

        document.getElementById('clientSelectionModal').addEventListener('click', function(e) {
            if (e.target === this) closeClientSelection();
        });

        document.getElementById('clientConfigModal').addEventListener('click', function(e) {
            if (e.target === this) closeClientConfig();
        });

        document.getElementById('sendToClientModal').addEventListener('click', function(e) {
            if (e.target === this) closeSendToClient();
        });
    </script>
</body>
</html>
